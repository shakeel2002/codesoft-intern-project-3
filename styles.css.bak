body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.calculator {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 10px;
    max-width: 500px;
    margin: auto;
}

.display {
    grid-column: span 4;
    background-color: #f0f0f0;
    text-align: right;
    padding: 15px;
    font-size: 1.5em;
}

button {
    padding: 17px;
    font-size: 2em;
}
